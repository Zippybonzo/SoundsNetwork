// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// staff models
model staff {
  id        Int         @unique
  username  String
  role      String
  strikes   strike[]
  promotion promotion[]
}

model strike {
  id      Int    @id @default(autoincrement())
  user    staff  @relation(fields: [staffId], references: [id])
  reason  String
  striker Int
  staffId Int
}

model promotion {
  id      Int    @id @default(autoincrement())
  user    staff  @relation(fields: [staffId], references: [id])
  reason  String
  striker Int
  prior   Int
  post    Int
  staffId Int
}
