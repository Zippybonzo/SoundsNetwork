// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model staff {
  id       Int      @unique
  username String
  role     String
  strikes  strike[]
}

model strike {
  id      Int    @unique
  user    staff  @relation(fields: [staffId], references: [id])
  reason  String
  striker Int
  staffId Int
}
